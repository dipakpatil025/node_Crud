<body>
    <%- include('partials/nav.ejs') %>




        <!-- <h1>Hello, world!</h1> -->

        <div class="container my-5">

            <a href="/">

                <button type="button" class="btn btn-success">All user <i class="mx-2 fas fa-users"
                        style="font-size: 15px;"></i></button>
            </a>
            <div class="container main bg-light">

                <div class="userform">
                    <div class="form-heading" style="text-align: center;">

                        <h3>New User</h3>
                        <h6 style="color: rgb(104, 111, 118);">Lorem ipsum dolor sit amet consectetur adipisicing elit.
                            Nesciunt, quo.</h6>
                    </div>
                    <%= user_update._id%>

                    <div class="actualform" style="margin: 50px 10%;">
                        <form action="/update_data/<%= user_update._id%>" method="POST" id="update_user">
                            <div class="mb-3">
                                
                                <label style="color: rgb(104, 111, 118);" for="exampleInputName"
                                    class="form-label"></label>

                                <input type="text" class="form-control" id="exampleInputName"
                                    value="<%= user_update.name%>" name="name" aria-describedby="emailHelp">

                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" style="color: rgb(104, 111, 118);"
                                    class="form-label">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1"
                                    value="<%= user_update.email%>" name="email" aria-describedby="emailHelp">

                            </div>

                            <div class="mb3 my-2">
                                <label for="exampleInputEmail1" style="color: rgb(104, 111, 118);"
                                    class="form-label">Gender</label>
                                <input class="mx-3" type="radio" name="gender" id="" value="Male" <%= user_update.gender == "Male"? "checked" :""%>   > Male
                                <input class="mx-3" type="radio" name="gender" id="" value="Male"<%= user_update.gender == "Female"? "checked" :""%>   > Female
                                
                            </div>
                            <div class="mb3 my-2">
                                <label for="exampleInputEmail1" style="color: rgb(104, 111, 118);"
                                    class="form-label">Status</label>
                                <input class="mx-3" type="radio" name="status" id="" value="Active"  <%= user_update.status == "active"? "checked" :""%>> Active
                                <input class="mx-3"  type="radio" name="status" id="" value="Inactive" <%= user_update.status == "Inactive"? "checked" :""%>> Inactive
                            </div>
                        <!-- <a href="up    dateuser/?id=<%=user_update._id%>">Submit</a> -->
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>


                    </div>
                </div>
            </div>

            </table>
        </div>
